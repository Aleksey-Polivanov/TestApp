<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Home</title>

    <link rel="stylesheet" href="/css/bootstrap.css">
    <link rel="stylesheet" href="/css/bootstrap-theme.css">
    <link rel="stylesheet" href="/css/modal.css">
    <link rel="stylesheet" href="/css/home.css">
    <script src="/js/plugins/jquery.min.js"></script>
    <script src="/js/plugins/bootstrap.min.js"></script>
    <script src="/js/scripts.js"></script>
</head>
<body>

<div id="welcome">
   <h1>Hello Stranger</h1>
    <h2>Chose your way</h2>
    <div class="btn-one">

            <a href="#LoginUser" class="btn btn-success">Sign in</a>
    </div>
    <div class="btn-two">
    <a href="#RegUser" class="btn btn-success">Sign up</a>
    </div>
</div>

<div id="RegUser" class="modalDialog">
    <div>
        <a href="#close" title="Close" class="close">X</a>
        <h3>Sign Up</h3>
        <div id="RegisterForm">
            <form class="form-horizontal" action='/singUp' method="POST">
                <fieldset>

                    <div class="control-group">
                        <!-- Name -->
                        <label class="control-label" for="name">Name</label>
                        <div class="controls">
                            <input type="text" id="name" name="name" placeholder="Enter Name" class="input-xlarge"/><br/>
                        </div>
                    </div>

                    <div class="control-group">
                        <!-- Login -->
                        <label class="control-label" for="login">Login</label>
                        <div class="controls">
                            <input type="text" id="login" name="login" placeholder="Enter Email or Phone" class="input-xlarge"/><br/>
                        </div>
                    </div>

                    <div class="control-group">
                        <!-- Password-->
                        <label class="control-label" for="password">Password</label>
                        <div class="controls">
                            <input type="text" id="password" name="password" placeholder="Enter Password" class="input-xlarge"><br/>
                        </div>
                    </div>

                    <div class="control-group">
                        <!-- Button -->
                        <div class="controls">
                            <button class="btn btn-success">Submit</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>




<div id="LoginUser" class="modalDialog">
    <div>
        <a href="#close" title="Close" class="close">X</a>
        <h3>Sign in</h3>

        <div id="loginForm">
            <form class="form-horizontal" action='/signIn' method="POST">
                <fieldset>

                    <div class="control-group">
                        <!-- Login -->
                        <label class="control-label" for="login">Login</label>
                        <div class="controls">
                            <input type="text" id="login" name="login" placeholder="Enter Login" class="input-xlarge"/><br/>
                        </div>
                    </div>

                    <div class="control-group">
                        <!-- Password-->
                        <label class="control-label" for="password">Password</label>
                        <div class="controls">
                            <input type="text" id="password" name="password" placeholder="Enter Password" class="input-xlarge"><br/>
                        </div>
                    </div>

                    <div class="control-group">
                        <!-- Button -->
                        <div class="controls">
                            <button class="btn btn-success">Submit</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>

    </div>
</div>


</body>
</html>