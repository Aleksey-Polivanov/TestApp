<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Home</title>

    <link rel="stylesheet" href="/css/bootstrap.css">
    <link rel="stylesheet" href="/css/bootstrap-theme.css">
    <link rel="stylesheet" href="/css/userConsole.css">
    <link rel="stylesheet" href="/css/updateForm.css">
    <link rel="stylesheet" href="/css/modal.css">
    <script src="/js/plugins/jquery.min.js"></script>
    <script src="/js/plugins/bootstrap.min.js"></script>
    <script src="/js/scripts.js"></script>
</head>
<body>
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Users</h3>
                    <div class="pull-right">
							<span class="clickable filter" data-toggle="tooltip" title="Toggle table filter" data-container="body">
								<i class="glyphicon glyphicon-filter"></i>
							</span>
                    </div>
                </div>
                <div class="panel-body">
                    <input type="text" class="form-control" id="dev-table-filter" data-action="filter" data-filters="#dev-table" placeholder="Filter Users" />
                </div>
                <table class="table table-hover" id="dev-table">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Phone</th>
                        <th>Email</th>
                        <th>Books</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% users.forEach(function(user) { %>
                    <tr>
                        <td>#</td>
                        <td><%= user.name %></td>
                        <td><%= user.phone %></td>
                        <td><%= user.email %></td>
                        <td><%= user.books.length %></td>
                    </tr>
                    <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-md-6">
            <div class="panel panel-success">
                <div class="panel-heading">
                    <h3 class="panel-title">Books</h3>
                    <div class="pull-right">
							<span class="clickable filter" data-toggle="tooltip" title="Toggle table filter" data-container="body">
								<i class="glyphicon glyphicon-filter"></i>
							</span>
                    </div>
                </div>
                <div class="panel-body">
                    <input type="text" class="form-control" id="task-table-filter" data-action="filter" data-filters="#task-table" placeholder="Filter Books" />
                </div>
                <table class="table table-hover" id="task-table">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Author</th>
                        <th>Name</th>
                        <th>UserName</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% books.forEach(function(book){ %>
                        <tr>
                            <td>#</td>
                            <td><%= book.author %></td>
                            <td><%= book.name %></td>
                            <td><%= book.userName %></td>
                        </tr>
                    <% }); %>
                    <tr>
                        <td></td>
                        <td>
                            <form action="/registration"  method="GET">
                                <button class="btn btn-success">ADD BOOK</button>
                            </form>
                        </td>
                        <td></td>
                        <td></td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


</body>
</html>